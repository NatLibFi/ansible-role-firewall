*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]

{% if firewall_rules is defined and firewall_rules %}
{% for rule in firewall_rules %}
-A INPUT {{ rule }}
{% endfor %}
{% else %}
-A INPUT -p tcp -m tcp --dport 22 -j ACCEPT
{% endif %}
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -i lo -j ACCEPT
COMMIT
